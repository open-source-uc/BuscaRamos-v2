{
  "name": "buscaramos-v2",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@11.6.2",
  "scripts": {
    "dev": "npm run prebuild:workers && next dev --turbopack",
    "prebuild:workers": "esbuild src/workers/fuse.worker.ts --bundle --format=esm --platform=browser --target=es2020 --outfile=public/workers/fuse.worker.js",
    "build": "npm run prebuild:workers && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "npx eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pages:build": "npm run prebuild:workers && npx @cloudflare/next-on-pages",
    "preview": "npm run pages:build && wrangler pages dev",
    "deploy": "npm run pages:build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./env.d.ts"
  },
  "dependencies": {
    "@fontsource-variable/instrument-sans": "^5.2.7",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-primitive": "^2.1.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.544.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1.13.16",
    "@eslint/eslintrc": "3",
    "@tailwindcss/postcss": "4",
    "@types/node": "20.19.13",
    "@types/react": "19",
    "@types/react-dom": "19",
    "esbuild": "^0.24.0",
    "eslint": "9",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "4.3.0",
    "prettier": "^3.6.2",
    "tailwindcss": "4",
    "tw-animate-css": "^1.3.8",
    "typescript": "5",
    "vercel": "47.0.4",
    "wrangler": "4.34.0"
  }
}
